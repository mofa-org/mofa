recursive-include mofa *.py
include requirements.txt README.rst HISTORY.rst
include .env.example
recursive-include mofa *.json
recursive-include mofa *.toml
recursive-include mofa *.md
recursive-include mofa *.gitignore
recursive-include mofa *.yml

# Include example agents and flows
graft agents
graft flows

# Exclude build artifacts and runtime outputs
global-exclude *.pyc
global-exclude __pycache__
global-exclude .DS_Store
global-exclude mofa_run_*
global-exclude *.egg-info
prune agents/**/logs
prune agents/**/out
prune flows/**/logs
prune flows/**/out
